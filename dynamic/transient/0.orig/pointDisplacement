FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    ".*"
    {
        type            uniformFixedValue;
        value           uniform (0 0 0);
        uniformValue    (0 0 0);
    }
    
    beam
    {
        type            lumpedPointDisplacement;
        value           uniform (0 0 0);
    }

    overset
    {
        patchType       overset;
        type            zeroGradient;
    }
    
}

